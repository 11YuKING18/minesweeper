{
  "name": "next-ts-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev -p 3000",
    "dev:hcm": "hcm 'src/**/*.module.css' -w",
    "hcm": "hcm 'src/**/*.module.css'",
    "build": "next build",
    "lint": "run-p lint:*",
    "lint:js": "eslint --ext .ts,.tsx,.js --ignore-path .gitignore .",
    "lint:prettier": "prettier --check \"./**/*.{ts,tsx,js}\" --ignore-path .gitignore",
    "lint:style": "stylelint \"src/**/*.css\" --ignore-path .gitignore",
    "fix:lint": "npm run lint:js -- --fix && npm run lint:style -- --fix && npm run lint:prettier -- --write",
    "start": "next start",
    "typecheck": "npm run hcm && tsc --noEmit"
  },
  "dependencies": {
    "next": "^15.1.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.4.9",
    "@types/react": "^18.2.20",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "eslint": "^8.46.0",
    "eslint-config-next": "^13.4.13",
    "eslint-config-prettier": "^8.8.0",
    "happy-css-modules": "^2.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.0",
    "prettier-plugin-organize-imports": "^4.1.0",
    "stylelint": "^16.14.1",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard": "^37.0.0",
    "typescript": "^5.1.6"
  }
}
